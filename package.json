{
  "name": "brithon-crm",
  "description": "",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/birchpress/brithon-crm.git"
  },
  "dependencies": {},
  "devDependencies": {
    "browserify": "^9.0.8",
    "browserify-shim": "^3.8.3",
    "immutable": "^3.7.4",
    "pkgify": "^1.0.3",
    "react": "^0.13.1",
    "react-immutable-render-mixin": "^0.8.1",
    "react-tools": "^0.13.3",
    "reactify": "^1.1.0"
  },
  "browserify": {
    "transform": [
      "reactify",
      "browserify-shim",
      "pkgify"
    ]
  },
  "browserify-shim": {
    "jquery": "global:$",
    "immutable": "global:Immutable",
    "react": "global:React"
  },
  "pkgify": {
    "packages": {
      "brithoncrm/registration": "./modules/registration/assets/js",
      "brithoncrm/subscriptions": "./modules/subscriptions/assets/js",
      "brithoncrm/todomvc": "./modules/todomvc/assets/js"
    }
  },
  "scripts": {
    "bundle": "for m in $(ls -d modules/*/); do browserify $m/assets/js/apps/index.js -o $m/assets/js/apps/index.bundle.js; done"
  },
  "private": true,
  "author": "Brithon Inc.",
  "license": "Commercial",
  "bugs": {
    "url": "https://github.com/birchpress/brithon-crm/issues"
  },
  "homepage": "https://github.com/birchpress/brithon-crm"
}
